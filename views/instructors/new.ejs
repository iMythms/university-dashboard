<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/globals.css" />
		<script src="https://cdn.tailwindcss.com"></script>
		<title>New Instructor</title>
	</head>
	<body class="bg-white h-dvh">
		<%- include('../partials/_navbar.ejs') %>
		<section class="container mx-auto">
			<form action="/instructors" method="POST" class="">
				<input type="hidden" name="action" value="addAndView" />
				<div class="flex justify-between items-center mt-16">
					<!-- Instructor Name -->
					<div>
						<input
							type="text"
							id="name"
							name="name"
							class="font-semibold text-3xl w-full focus:outline-none"
							placeholder="Instructor Name"
							required
						/>
					</div>
					<button
						type="submit"
						class="w-fit text-base font-medium bg-[#F1F1F0] px-2.5 py-1 rounded-lg hover:bg-[#2a2a2a] hover:text-white transition ease-in-out"
					>
						Done
					</button>
				</div>

				<!-- Instructor Title -->
				<div class="mt-12 flex gap-3">
					<label
						for="contactInfo"
						class="text-base font-medium h-fit py-1 text-nowrap"
						>Contact Info</label
					>
					<input
						type="text"
						id="contactInfo"
						name="contactInfo"
						class="font-normal text-base w-full focus:outline-none h-fit py-1"
						placeholder="john.doe@ga.edu.com"
						required
					/>
				</div>
			</form>
		</section>
	</body>
</html>
